---
interface Props {
  squareIndex: number;
}

const { squareIndex } = Astro.props;
---

<div
  id={`square-${squareIndex}`}
  class="shadow-md square-item h-12 w-12 rounded-lg font-mono bg-neutral-800 text-2xl text-center font-light flex items-center justify-center cursor-pointer"
  data-sqindex={squareIndex}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="1em"
    height="1em"
    viewBox="0 0 24 24"
    id={`square-${squareIndex}-icon-X`}
    class="hidden square-icon"
  >
    <path
      fill="currentColor"
      d="M18.36 19.78L12 13.41l-6.36 6.37l-1.42-1.42L10.59 12L4.22 5.64l1.42-1.42L12 10.59l6.36-6.36l1.41 1.41L13.41 12l6.36 6.36z"
    ></path>
  </svg>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="1em"
    height="1em"
    viewBox="0 0 24 24"
    id={`square-${squareIndex}-icon-0`}
    class="hidden square-icon"
  >
    <path
      fill="currentColor"
      d="M12 2C6.47 2 2 6.47 2 12s4.47 10 10 10s10-4.47 10-10S17.53 2 12 2m0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8s8 3.58 8 8s-3.58 8-8 8"
    ></path>
  </svg>
</div>
